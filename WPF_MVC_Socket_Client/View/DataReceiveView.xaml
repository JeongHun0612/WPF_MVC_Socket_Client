            <DataGrid ItemsSource="{Binding ReceiveDataCollection}" ColumnWidth="*" GridLinesVisibility="None" HeadersVisibility="None" AutoGenerateColumns="False"
                      Background="{StaticResource MainBackgroundBrush}" BorderBrush="{StaticResource ContentBorderBrush}" Foreground="{StaticResource ContentForegroundBrush}" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type model:ReceiveDataModel}">
                                <WrapPanel>
                                    <TextBlock Text="{Binding RXTXTag}" FontFamily="/Fonts/#Roboto Light" Visibility="{Binding IsRXTXTagVisibility}" Margin="0,0,10,0">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RXTXTag}" Value="[RX]">
                                                        <Setter Property="Foreground" Value="{StaticResource ListItemRXTagForegroundBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RXTXTag}" Value="[TX]">
                                                        <Setter Property="Foreground" Value="{StaticResource ListItemTXTagForegroundBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Time}" Visibility="{Binding IsTimeVisibility}" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Margin="0,0,10,0"/>
                                </WrapPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
